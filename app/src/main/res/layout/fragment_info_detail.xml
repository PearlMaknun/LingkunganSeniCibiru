<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.InfoDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/jenis_kesenian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Jenis Kesenian"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tahun_kesenian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tahun"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView

                    android:id="@+id/pemimpin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pemimpin"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/icon_loc"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/nama_lokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/icon_loc"
                    android:text="Lokasi Kesenian"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/desc"
                    style="@style/RtlOverlay.DialogWindowTitle.AppCompat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView

                    android:id="@+id/isi_deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="isi deskripsi kesenian di daerah cibiru bandung"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</FrameLayout>